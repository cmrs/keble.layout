<div metal:define-macro="portal_footer"
     i18n:domain="plone"
     class="row"
     tal:define="portal context/@@plone_portal_state/portal;
                 portal_url portal/absolute_url">
    <div class="cell width-full position-0">

        <div id="portal-footer">
            <div id="footer-links">
                <div class="footer-link">
                    <a href="#" tal:attributes="href string:${portal_url}/sitemap">site map</a>
                </div>
                <div class="footer-link">
                    <a href="#" tal:attributes="href string:${portal_url}/accessibility-info">accessibility</a>
                </div>
                <div class="footer-link-last">
                    <a href="#" tal:attributes="href string:${portal_url}/contact-info">feedback</a>
                </div>
            </div>
        </div>

    </div>
</div>
